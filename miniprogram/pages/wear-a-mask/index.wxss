page{
  height: 100%;
}
.page{
  height: 100vh;
  background: #f9f9f9;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: constant(constant(safe-area-inset-bottom));
  padding-bottom: env(safe-area-inset-bottom);
}
.main-wrap{
  background: #fff;
  padding: 10px;
}
.choose-image{
  border: 1px dashed #efefef;
  width: 298px;
  height: 298px;
  margin: 0 auto;
  background: url(https://n1image.hjfile.cn/res7/2020/02/13/4b391f3e41cef2d8f387822443eb533b.png) no-repeat center/auto 300rpx;
}
.image-position{
  position: relative;
  width: 300px;
  height: 300px;
  overflow: hidden;
  margin: 0 auto;
}
.canvas-mask{
  position: absolute;
  left: 0;
  top: -9999px;
  width: 600px;
  height: 600px;
}
.image-wrap{
  position: relative;
  width: 300px;
  height: 300px;
}
.main-image{
  width: 300px;
  height: 300px;
}
.btn-wrap{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #2f3742;
  line-height: 1.5;
  text-align: center;
  flex-wrap: wrap;
}
.btn-desc{
  width: 100%;
  text-align: center;
  color: #95a1af;
  font-size: 12px;
  margin-bottom: 8px;
}
.btn-remove{
  padding-top: 40px;
  width: 60px;
  background: url(https://n1image.hjfile.cn/res7/2020/02/01/63e0c77558a7bc50c4f2666b8df449e0.png) no-repeat center top / auto 40px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(47,55,66,1);
  line-height:25px;
}
.btn-generate{
  padding-top: 40px;
  width: 60px;
  margin-left: 30px;
  background: url(https://n1image.hjfile.cn/res7/2020/02/01/8fb88a2a273c37c6098966681c402f21.png) no-repeat center top / auto 40px;
  font-size:12px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(47,55,66,1);
  line-height:25px;
}
.btn-avatar, .btn-camera{
  font-size: 12px;
  padding: 10px;
  margin: 0 !important;
  background: transparent !important;
  width: 87px !important;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(47,55,66,1);
  line-height:20px;
}
.btn-avatar:before{
  content: '';
  display: block;
  margin: 0 auto 3px;
  width: 30px;
  height: 30px;
  background: url(https://n1image.hjfile.cn/res7/2020/02/13/e3c3acc4b66e3715eb59ebc9625527bf.png) no-repeat center / contain;
}

.btn-camera:before{
  content: '';
  display: block;
  margin: 0 auto 3px;
  width: 30px;
  height: 30px;
  background: url(https://n1image.hjfile.cn/res7/2020/02/13/046303789dd41a2f232d799ee18e2a52.png) no-repeat center / contain;
}
.mask-container{
  height: 100px;
  width: 100px;
  position: absolute;
  left: 0;
  top: 0;
  border: dashed 1px yellow;
}
.mask{
  width: 100%;
  height: 100%;
}
.bottom-desc-wrap{
  padding: 20px 0;
  font-size: 12px;
  line-height: 1.5;
  color: #95A1AF;
  text-align: center
}
.mask-wrap{
  width: 100%;
  bottom: 5px;
  height: 65px;
  white-space: nowrap;
}
.tab-wrap .tab-bd {
  background: #fff;
}
.tab-bd-image{
  height: 50px;
  width: 50px;
  margin: 5px;
}
.tab-hd-desc{
  font-size: 12px;
  line-height: 30px;
  color: #95a1af;
  margin-left: 15rpx;
}
.image-btn-resize,
.image-btn-remove,
.image-btn-checked,
.image-btn-reverse{
  position: absolute;
  z-index: 1;
  width: 52px;
  height: 52px;
}
.image-btn-resize {
  right: 0;
  bottom: 0;
  margin-right: -26rpx;
  margin-bottom: -26rpx;
  background: url("https://n1image.hjfile.cn/res7/2020/02/09/9b5c2be4361101b155a604e6735a8ad3.png") no-repeat center/contain;
}
.image-btn-remove {
  left: 0;
  top: 0;
  margin-left: -26rpx;
  margin-top: -26rpx;
  background: url("https://n1image.hjfile.cn/res7/2020/02/09/2c591b8d9d1c75d1e4d8804e710dc086.png") no-repeat center/contain;
}
.image-btn-checked {
  right: 0;
  top: 0;
  margin-right: -26rpx;
  margin-top: -26rpx;
  background: url("https://n1image.hjfile.cn/res7/2020/02/11/0b05b7bc398a85da11ff1eb97ed03e1f.png") no-repeat center/contain;
}
.image-btn-reverse {
  left: 0;
  bottom: 0;
  margin-left: -26rpx;
  margin-bottom: -26rpx;
  background: url("https://n1image.hjfile.cn/res7/2020/02/16/0807e31c8557a250cc24f9e089fbb41d.png") no-repeat center/contain;
}
.poster-dialog {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  justify-content: center;
  align-items: center;
  z-index: 10;
  background-color: rgba(0,0,0,0.8);
}
.poster-dialog.show {
  display: flex;
}
.poster-dialog-main {
  position: relative;
}
.poster-image {
  width: 600rpx;
  height: 600rpx;
}
.poster-image-tips {
  position: absolute;
  left: 0;
  top: 10rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  line-height: 1.5;
  color: #fff;
  background: rgba(0,0,0,0.3);
  border-radius: 0 24rpx 24rpx 0;
}
.poster-footer-btn {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  width: 100%;
}
.poster-footer-btn .poster-btn-save {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 236rpx;
  height: 80rpx;
  border: 2rpx solid #fff;
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 42rpx;
  border-radius: 200rpx;
}
.poster-footer-btn .poster-btn-share {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 66rpx;
  width: 236rpx;
  height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 42rpx;
  border-radius: 200rpx;
  background: linear-gradient(60deg, #2f5aff 0, #0093ff 100%);
  box-shadow: 0 4rpx 12rpx 0 rgba(47,90,255,0.2);
  padding: 0;
}
.poster-footer-btn .icon {
  margin-right: 4rpx;
  width: 36rpx;
  height: 36rpx;
}
.poster-footer-btn .icon-wechat {
  margin-right: 4rpx;
  width: 36rpx;
  height: 28rpx;
}
.poster-dialog-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 72rpx;
  height: 76rpx;
  background: url("https://n1image.hjfile.cn/res7/2019/01/10/b18454c07e26f34cbec2fb10474c4a6c.png") no-repeat center/72rpx 76rpx;
}
.cropper-wrap {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 10px;
}
.cropper-bottom {
  position: absolute;
  width:100%;
  bottom:50rpx;
  display: flex;
  z-index: 10;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;
  height: 210rpx;
}
.cropper-bottom-btn {
  margin: 0 40px;
  font-size: 40rpx;
  line-height: 2;
  color: #fff;
}
.copyright{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  text-align: center;
  height: 18rpx;
  line-height: 18rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#efefef;
}
